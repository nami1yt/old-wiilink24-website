---
const today = new Date();
import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
---

<footer>
	<div class="copyright">
		<img class="copyimg" src="../../Images/wiimotes_logo.png">
		<h3 class="copydesc">{t("footer.desc")}</h3>
		<h2 class="copytext"> <b style="font-family:RubikBold">Wii</b><b style="font-family:RubikMedium">Link</b> Team </br><d style=" font-family:Gilroy; font-size:20px; text-align: right;">Â© 2020-{today.getFullYear()} </d></h2>
		<div class="socials">
			<a class="social" href="https://github.com/WiiLink24"><img src="../../Images/github.svg" width="30px"></a>
			<a class="social" href="https://discord.gg/wiilink"><img src="../../Images/discord.svg" width="30px"></a>
			<a class="social" href="https://twitter.com/wiilink24?lang=es"><img src="../../Images/twitter.svg" width="30px"></a>
			<a class="social" href="https://www.patreon.com/WiiLink24"><img src="../../Images/patreon.svg" width="30px"></a>
			<a class="social" href="https://www.youtube.com/@WiiLink"><img src="../../Images/youtube.svg" width="30px"></a>
		</div>
		</div>
	</div>
</footer>
<style>
.copyright{
    bottom:0;
    position: relative;
	left:0;
    width:100%;
    height:300px;
    /* background-image:url("../../Images/copyrightbg.png"); */
    background-color: rgb(28, 28, 28);
    top:200px;
    z-index: 5;
    background-size: cover;
}

.copytext{
    transform: translate(-100%,0);
	font-family:Gilroy;
    bottom:0;
    right:9%;
    font-size: 30px;
    position: absolute;
    text-align: right;
    color: white;
}

.copyimg{
    bottom:0; right:8%; position: absolute; width: 200px;
}

.socials{
    display: flex;
    width:20%;
    position: absolute;
    gap:15px;
    left:8%;
    bottom:30px;
    transform: translate(0%,0);
}

.social:nth-child(1):hover{
    filter: invert(4%) sepia(15%) saturate(6007%) hue-rotate(188deg) brightness(95%) contrast(100%);
}

.social:nth-child(2):hover{
    filter: invert(12%) sepia(89%) saturate(3850%) hue-rotate(236deg) brightness(109%) contrast(88%);
}

.social:nth-child(3):hover{
    filter: invert(57%) sepia(15%) saturate(2103%) hue-rotate(170deg) brightness(91%) contrast(93%);
}

.social:nth-child(4):hover{
    filter: invert(39%) sepia(54%) saturate(2336%) hue-rotate(332deg) brightness(82%) contrast(111%);
}

.social:nth-child(5):hover{
    filter: invert(9%) sepia(98%) saturate(6969%) hue-rotate(1deg) brightness(102%) contrast(93%);
}

.social{
    width:30px;
    height:30px;
    filter: invert(100%) sepia(8%) saturate(7493%) hue-rotate(284deg) brightness(114%) contrast(103%);
}

.copydesc{
    width:500px;
    line-height: 1.5;
    text-align: justify;
    bottom:80px;
    left:8%;
    position: absolute;
    font-size: 15px;
}

img{
    border-radius: 0px;
}


@media (max-width:1000px) {
    .copydesc{
        display: none;
    }
    .copytext{
        left:20px;
        bottom:80px;
        transform: translate(0, 0);
        text-align: left;
    }
    .socials{
        left:20px;
    }
    .copyimg{
        right:20px;
    }
}

@media (min-width:2000px) {
		.copyright{
			width:2000px;
			left:50%;
			transform: translate(-50%, 0);
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
			position: relative;
		}
		.status{
			width:2000px;
			left:50%;
			transform: translate(-50%, 0);
		}
		.topimg{
			width:3000px;
			left:50%;
			transform: translate(-50%, -158px);
		}
	}
</style>
