---
import '../styles/global.css';
export interface Props {
date: Date;
}

const { date } = Astro.props;
---

<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'numeric',
			day: 'numeric',
		})
	}
	
</time>

<style>
	time{
		position: absolute;
		font-family:Cafe;
		color:white;
		top:20px;
		left:20px;
		padding-left:10px;
		padding-right:10px;
		padding-top:5px;
		padding-bottom:5px;
		background-color: rgba(28, 28, 28, 0.153);
		border-radius: 8px;
		backdrop-filter: blur(8px);
		z-index: 11;
	}
</style>