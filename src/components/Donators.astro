---
import i18next, { t, changeLanguage } from "i18next";
import { Trans, HeadHrefLangs } from "astro-i18next/components";
---

<div class="roundcontainer">
  <h2 class="contentslogan" style="top:28px; position: relative;">
    <d style="font-family: Gilroy;">{t("donate.title")}</d>
  </h2>
  <div class="discordholder">
    <div class="discordmessage">{t("donate.desc")}</div>
    <a class="social" href="https://discord.gg/wiilink"
      ><div class="discordjoinbutton">{t("donate.join")}</div></a
    >
  </div>
  <div class="slider">
    <div class="slide-track">
      <div class="slide"></div>
      <div class="slide"></div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">Snapple</h3>
      </div>
      <div class="slide">
        <h3 class="name">FreshGreen</h3>
      </div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">King Yakuza FES</h3>
      </div>
      <div class="slide"></div>
    </div>

    <div class="slide-track">
      <div class="slide">
        <h3 class="name">Drip Tarts</h3>
      </div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">Bombdinomite</h3>
      </div>
      <div class="slide"></div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">ceasorlydell31</h3>
      </div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">PurpleKoolAidInDaHood</h3>
      </div>
    </div>

    <div class="slide-track">
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">SMUG</h3>
      </div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">itsRavey</h3>
      </div>
      <div class="slide"></div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">GamerDude321</h3>
      </div>
      <div class="slide">
        <h3 class="name">Snap</h3>
      </div>
    </div>

    <div class="slide-track">
      <div class="slide">
        <h3 class="name">BlueBoi</h3>
      </div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">Igel</h3>
      </div>
      <div class="slide">
        <h3 class="name">RandomBritish Dude</h3>
      </div>
      <div class="slide"></div>
      <div class="slide">
        <h3 class="name">Jed360</h3>
      </div>
